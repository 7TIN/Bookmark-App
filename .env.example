# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-or-anon-key
# Optional alias supported by the app:
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Prisma (runtime: Supavisor pooled connection)
DATABASE_URL="postgres://postgres.your-project-ref:your-password@aws-0-your-region.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Prisma CLI (migrations/introspection: direct connection)
# If omitted, Prisma CLI falls back to DATABASE_URL.
DIRECT_URL="postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres"
